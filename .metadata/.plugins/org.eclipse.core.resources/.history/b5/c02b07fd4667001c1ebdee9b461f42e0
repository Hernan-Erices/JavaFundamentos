		//4, 5, 6 - Recorrer un Arreglo, Encontrar el Máximo de un arreglo, Obtener el Promedio
		
		int[] array;
		array = new int[4];
        
        array[0] = 2;
        array[1] = 5;
        array[2] = 6;
        array[3] = 5;
        
